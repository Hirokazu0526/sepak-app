<!DOCTYPE html>
<html>
  <head>
    <title>SepakApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <div class="header-logo">
    <% if @current_user %>
        <%= link_to("SEPAKTAKRAW_APP", "/") %>
      <% else %>
        <%= link_to("SEPAKTAKRAW_APP", "/") %>
      <% end %>
    </div>
    <ul class="header-menus">
    <% if @current_user %>
      <li>
        <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
      </li>
            <li>
              <%= link_to("Post", "/posts/index") %>
            </li>
            <li>
              <%= link_to("NewPost", "/posts/new") %>
            </li>
            <li>
              <%= link_to("User", "/users/index") %>
            </li>
            <li>
              <%= link_to("Logout", "/logout", {method: :post}) %>
            </li>
            <% else %>
            <li>
                <%= link_to("About", "/about") %>
            </li>
            <li>
              <%= link_to("Japan Team", "http://jstaf.jp/japan/japan.html", :target=>["_blank"]) %>
            </li>
            <li>
              <%= link_to("Post", "/posts/index") %>
            </li>
            <li>
              <%= link_to("Sign up", "/signup") %>
            </li>
            <li>
              <%= link_to("Login", "/login") %>
            </li>
            <% end %>
        </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    
    <%= yield %>
  </body>
</html>
